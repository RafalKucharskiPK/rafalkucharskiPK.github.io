@article{naumov2022shaping, 

  title={Shaping the optimal technology for servicing the long-distance deliveries of packaged cargo by road transport}, 

  author={Naumov, Vitalii and Shulika, Olha and Orda, Oleksandra and Vasiutina, Hanna and Bauer, Marek and Oliskevych, Myroslav}, 

  journal={Sustainability}, 

  volume={14}, 

  number={12}, 

