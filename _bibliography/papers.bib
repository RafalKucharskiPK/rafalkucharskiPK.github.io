@article{razzaq2017mlcaf, 

  title={mlCAF: Multi-level cross-domain semantic context fusioning for behavior identification}, 

  author={Razzaq, Muhammad Asif and Villalonga, Claudia and Lee, Sungyoung and Akhtar, Usman and Ali, Maqbool and Kim, Eun-Soo and Khattak, Asad Masood and Seung, Hyonwoo and Hur, Taeho and Bang, Jaehun and others}, 

  journal={Sensors}, 

